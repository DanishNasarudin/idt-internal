generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
  binaryTargets = ["native", "rhel-openssl-1.1.x", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Navbar items for public navigation. Add this model and run `prisma migrate` to create the table.
model NavbarItem {
  id      String  @id @default(cuid())
  label   String
  href    String
  order   Int
  visible Boolean @default(true)
  // Optional parent to allow nested dropdowns
  parentId String?
  parent   NavbarItem?  @relation("NavbarChildren", fields: [parentId], references: [id])
  children NavbarItem[] @relation("NavbarChildren")
}
